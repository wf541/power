<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wf.dao.mabaties.mappers.UserMapper">

<!-- 注册 -->
	<insert id="create">
  	insert into power_reg(id,user_name, mail, phone, encode,password) 
  	  values(power_reg_seq.nextval,#{userName}, #{mail}, #{phone},#{encode},#{password})
  </insert>
  <!--根据用户名查询是否存在  -->
  <select id="findReg" resultType="com.wf.entity.Reg">
  	select id,user_name, mail, phone,encode from power_reg where user_name=#{userName}
  </select>
  
  <select id="findSearch1" resultType="com.wf.entity.Login">
  	select id,user_name,encode from power_reg where user_name=#{userName}
  </select>
  
  <select id="findSearch2" resultType="com.wf.entity.Vip">
  	select id,relname,sex,idencity,mail,infor from power_reg where id=#{id}
  </select>
  
 <!--  vip插入数据  -->
  <insert id="creatVip">
  		update power_reg set relname=#{relname},sex=#{sex},idencity=#{idencity},infor=#{infor} where id=#{id}
  </insert>
  
   
	
	<!-- 修改地址 -->
	<update id="updateAddress">
		update power_address set aphone=#{aphone},arelname=#{arelname},postCode=#{postCode},area=#{area},province=#{province},city=#{city},address=#{address} where id=#{id}
	</update>  
	<!-- 添加地址  外键关联  -->
  <insert id="creatAddress">
  		insert into power_address(id,postCode,area,province,city,address,arelname,aphone,reg_id)
  		values(power_address_seq.nextval,#{postCode},#{area},#{province},#{city},#{address},#{arelname},#{aphone},#{login.id}) 
  </insert> 
  
 
  <!-- 显示地址 -->
  <select id="findAddress" resultType="com.wf.entity.Address">
  	select id,arelname,aphone,postCode,area,province,city,address from power_address where power_address.reg_id=#{id}
  </select>
  
   <!-- 根据id查询 -->
  <select id="findOne" resultType="com.wf.entity.Address">
  select id,arelname,aphone,postCode,area,province,city,address from power_address where id=#{id}
  </select>
  
  
  <!-- 修改密码 -->
  <update id="changePwd">
  	update power_reg set encode = #{pwd1} where id=#{id}
  </update>
  
  
  <!--查省，市，区做集合 -->
  <select id="findprovinces" resultType="com.wf.entity.Address">
	  select * from power_address
  </select>
  
  <!--查找商品 集合 -->
  <select id="findCommodity" resultType="com.wf.entity.Commodity">
  		select * from power_commoditys
  </select>
  
  <!--根据id查找相应商品详情  -->
	<select id="findDetails" resultType="com.wf.entity.Commodity">
		select * from power_commoditys where id=#{id}
	</select>
	

	<!-- 购物车 -->
    <delete id="del">
    	delete from power_car where id=#{id}
    </delete>	
	
	<!--加入购物车  -->
	<insert id="addCar">
		insert into power_car(id,reg_id,commodity_id,counts)
       values(power_car_seq.nextval,#{regId},#{commodityId},1)
	</insert>
	
	<!-- 查找加入购物车 -->
	<select id="findAllCar" resultMap="carMapper">
	select car.id carId,car.counts carcounts,pc.id comId,pr.id regId,pc.name,pc.describe,pc.price,pc.counts,pa.postcode,pa.area,pa.address,pa.arelname,pa.aphone,pa.city,
pa.province from power_car car inner join power_reg pr on car.reg_id=pr.id
inner join power_commoditys pc on car.commodity_id=pc.id
inner join power_address pa on pa.reg_id = pr.id
where car.reg_id=#{userid}
	</select>
	<resultMap type="com.wf.entity.Car" id="carMapper">
		<id property="id" column="carId"></id>
		<result property="counts" column="carcounts"/>
	<!-- <association property="address" javaType="com.wf.entity.Address">
  		<id property="id" column="addressId"></id>
		<result property="arelname" column="arelname"/>
		<result property="aphone" column="aphone"/>
		<result property="postCode" column="postCode"/>
		<result property="area" column="area"/>
		<result property="province" column="province"/>
		<result property="city" column="city"/>
		<result property="address" column="address"/>
  	</association> -->
	<association property="commodity" javaType="com.wf.entity.Commodity">
		<id property="id" column="comId"></id>
		<result property="price" column="price"/>
		<result property="counts" column="counts"/>
		<result property="name" column="name"/>
		<result property="describe" column="describe"/>
	</association>
	</resultMap>
	
	<!-- 更新加减 -->
	<update id="addCount">
	update  power_car set counts=counts+1 where id=#{id}
	</update>
	
	<update id="jianCount">
	update  power_car set counts=counts-1 where id=#{id}
	</update>
	<!--返回单个查找的购物车  -->
	<select id="findOneCar" resultMap="carMapper">
	select car.id carId,car.counts carcounts,pc.id comId,pr.id regId,pc.name,pc.describe,pc.price,pc.counts,pa.postcode,pa.area,pa.address,pa.arelname,pa.aphone,pa.city,
pa.province from power_car car inner join power_reg pr on car.reg_id=pr.id
inner join power_commoditys pc on car.commodity_id=pc.id
inner join power_address pa on pa.reg_id = pr.id
where car.id=#{id}
	</select>
	
	<!-- 提交订单 -->
	<insert id="createOrder">
		insert into power_order_middel(id,order_id,address_id) 
		values(power_order_middel_seq.nextval,#{orderId},#{addressId})
	</insert>
		<!--订单列表 vip -->
	<select id="findVipOrder" resultMap="OrderMap">
	  select preg.user_name userName,pc.price,pcar.counts,preg.id preg_id,pom.id pom_id,pcar.id carId
 from power_order_middel pom
 inner join power_order porder on pom.order_id = porder.id
 inner join power_reg preg on porder.reg_id = preg.id
 inner join power_commoditys pc on pom.commodity_id = pc.id
 inner join power_car pcar on  pc.id=pcar.commodity_id
 where preg.id=#{id}
	</select>
	<resultMap type="com.wf.entity.Order" id="OrderMap">
		<id property="id" column="pom_id"></id>
	<association property="reg" javaType="com.wf.entity.Reg">
  		<id property="id" column="preg_id"></id>
  		<result property="userName" column="userName"/>
  	</association>
  	<association property="car" javaType="com.wf.entity.Car">
  		<id property="id" column="carId"></id>
  		<result property="counts" column="counts"/>
  	</association>
	<association property="commodity" javaType="com.wf.entity.Commodity">
		<id property="id" column="commodityId"></id>
		<result property="price" column="price"/>
		<result property="name" column="name"/>
		<result property="describe" column="describe"/>
	</association>
	</resultMap>
	
	<!-- 订单详情vip -->
	<select id="findXiaofei" resultMap="AddressOrderMap">
	select pa.id addressId,pc.id commodityId,pom.id pomId,pc.name,pc.price,pcar.id carId,pcar.counts,pc.describe,pa.aphone,pa.arelname,pa.postCode,pa.area,pa.province,pa.city,pa.address 
	from power_order_middel pom inner join power_commoditys pc on pom.commodity_id = pc.id
  inner join power_address pa on pa.commodity_id=pc.id
  inner join power_car pcar on  pc.id=pcar.commodity_id 
	where pc.id = #{id}
	</select>
	<resultMap type="com.wf.entity.Order" id="AddressOrderMap">
		<id property="id" column="pomId"></id>
	<association property="car" javaType="com.wf.entity.Car">
  		<id property="id" column="carId"></id>
  		<result property="counts" column="counts"/>
  	</association>
	<association property="address" javaType="com.wf.entity.Address">
  		<id property="id" column="addressId"></id>
		<result property="arelname" column="arelname"/>
		<result property="aphone" column="aphone"/>
		<result property="postCode" column="postCode"/>
		<result property="area" column="area"/>
		<result property="province" column="province"/>
		<result property="city" column="city"/>
		<result property="address" column="address"/>
  	</association>
	<collection property="commodity" ofType="com.wf.entity.Commodity">
		<id property="id" column="commodityId"></id>
		<result property="price" column="price"/>
		<result property="name" column="name"/>
		<result property="describe" column="describe"/>
	</collection>
	</resultMap>
	
	<!--清空购物车  -->
</mapper>